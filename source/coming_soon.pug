extends modules/layout/layout.pug
include modules/script/lib
include modules/control/control
append head
  title="Coming Soon - Coming Soon 01"
  link(href="css/main.min.css" rel="stylesheet")
  //- replace your color below
  //- link(href="css/colors/colors.min.css" rel="stylesheet")
append header
append content
  section.page-coming-soon
    .inner
      h1.mb-5 WE ARE ALMOST THERE
      h2.mb-5 Stay tuned for the greatest plan.
      form.form-inline.mb-4(action="POST" method="get" role="search")
        .input-group.input-group-lg
          input.ts-input-03.border-right-0(type="email"  placeholder="Your Email Address")
          .input-group-append
            button.ts-btn.btn-color1(type="submit") Subcrible
      .countdown.d-flex.mb-5
        .item
          span.days 00
          p.days_ref days
        .item
          span.hours 00
          p.hours_ref hours
        .item
          span.minutes 00
          p.minutes_ref minutes
        .item
          span.seconds 00
          p.seconds_ref seconds
      .social
        a(href="#").square.bg--facebook.in-dark.hbg--facebook.mx-2
          i.ts-icon.lab.la-facebook-square
        a(href="#").square.bg--twitter.in-dark.hbg--twitter.mx-2
          i.ts-icon.lab.la-twitter
        a(href="#").square.bg--pinterest.in-dark.hbg--pinterest.mx-2
          i.ts-icon.lab.la-pinterest
        a(href="#").square.bg--instagram.in-dark.hbg--instagram.mx-2
          i.ts-icon.lab.la-instagram
  +control
append plugins  
  +lib
append script
  script(src="js/count-down.min.js")
  script(src="js/main.min.js")
  
