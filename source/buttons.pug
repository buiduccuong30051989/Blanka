extends modules/layout/layout.pug
include modules/script/lib
include modules/control/control
append head
  title="Component - Buttons"
  link(href="css/main.min.css" rel="stylesheet")
append header
append content
  .bg--gray60.py-7
    .container
      //- Social List
      - var socialList = ["facebook", "twitter", "linkedin", "pinterest", "youtube", "instagram", "google-plus", "tumblr", "dribbble", "apple", "amazon", "twitch", "soundcloud", "steam"];
      h4.my-3.pt-3#socialIcon Social Icon
      .card.mb-3.d-block.bg-dark.border-0
        .card-body
          .row
            .col-lg-12
              for name in socialList
                a(href="#").square.bg--fw-1.in-dark.mr-1
                  i(class="ts-icon lab la-" + name)

      .card.mb-3.d-block.bg-light.border-0
        .card-body
          .row
            .col-lg-12
              for name in socialList
                a(href="#").square.bg--fb-5.in-dark.mr-1
                  i(class="ts-icon lab la-" + name)

      .card.mb-3.d-block.bg-dark.border-0
        .card-body
          .row
            .col-lg-12
              for name in socialList
                a(href="#", class=('square mr-1 bg--fw-1 in-dark hbg--') + name)
                  i(class="ts-icon lab la-" + name)

      .card.mb-3.d-block.bg-dark.border-0
        .card-body
          .row
            .col-lg-12
              for name in socialList
                .ts-box-square-01.bd--fw-5.color--white.mr-1
                  i(class="ts-icon lab la-" + name)
      
      .card.mb-3.d-block.bg-light.border-0
        .card-body
          .row
            .col-lg-12
              button.ts-btn.btn-color1.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color1.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color2.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color2.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color3.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color3.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color4.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color4.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color5.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color5.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color6.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color6.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color7.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color7.mb-3.mr-3 Button Outline 01

              button.ts-btn.btn-color8.mb-3.mr-3 Button 01
              button.ts-btn.btn-outline-color8.mb-3.mr-3 Button Outline 01
              
              
      .card.mb-3.d-block.bg-dark.border-0
        .card-body
          .row
            .col-lg-12
              button.ts-btn.btn-color1.btn-lg.mb-3.mr-3 Button 01 Large
              button.ts-btn.btn-outline-color1.btn-lg.mb-3.mr-3 Button Outline 01
  
  +control
append plugins  
  +lib
append script
  script(src='js/extention/on-screen.min.js')
  script(src='js/counter-up.min.js')
  script(src="js/main.min.js")
