extends modules/layout/layout.pug
include modules/script/lib
include modules/header_mixin/header_mixin
include modules/footer/footer
include modules/control/control
append head
  title="Contact - Contact 02"
  link(href="css/main.min.css" rel="stylesheet")
append header
  +header01
append content
  section.sub-header.bg--whitesmoke
    .container
      h2.title Contact Version 02

  section.section-breadcrumb.bg-white.py-2
    .container
      nav(aria-label="breadcrumb")
        ol.ts-breadcrumb
          li.breadcrumb-item
            a(href="index.html") 
              i.ts-icon.la.la-home.mr-1
              | Home
          li.breadcrumb-item.active(aria-current="page") Contact 02

  section.bg--white.py-7
    .container
      .row
        .col-lg-8.offset-lg-2.text-center
          h3.fs--48.mb-4 CONTACT US
          p.mb-5.fs--18 Send us an email vulputate bibendum justo sed, tincidunt justo sed
            br
            | quisque dictum eget dolor vel justo sed justo sed maximus.
          .contact-01
            form(action="/contact_02.html")
              .row-g-20.mb-4
                .col-lg-4.mb-4.mb-lg-0
                  input.ts-input.form-control-lg(type="text", placeholder="Your Name")
                .col-lg-4.mb-4.mb-lg-0
                  input.ts-input.form-control-lg(type="email", placeholder="Your Email")
                .col-lg-4
                  input.ts-input.form-control-lg(type="text", placeholder="Your Phone")
              .row.mb-4
                .col-lg-12
                  textarea.ts-input(rows="7")
              .row
                .col-lg-12
                  button.ts-btn.btn-color1.btn-lg Send Mail
  section#js-map-canvas.map-01

  +footer01
  +control
append plugins  
  +lib
append script
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAOvgMzMavm0loFdwqNrzzVh42X_-lDZ3w')
  script(src="js/google-map.min.js")
  script(src="js/main.min.js")
