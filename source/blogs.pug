                    a(href="blog_detail.html").blog-card-readmore
                      | Continue Reading
                      i.ts-icon.la.la-angle-right
            .col-lg-6
              .ts-blog-card-07.align-right
                .card-cover
                  img.card-img(alt="cover", src='https://picsum.photos/400?random=15')
