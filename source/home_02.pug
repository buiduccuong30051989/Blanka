            data-items="4"
            data-items-md="3"
            data-items-sm="1"
            data-items-xs="1"
            data-margin="0"
            data-center="false"
            data-dots="false"
            data-arrows="false"
            data-autoplay='false'
            data-hoverpause="true"
            data-autoplay-timeout="9000"
            data-loop="true"
            data-next="case-next"
            data-prev="case-prev")
